{
  "packages": {
    ".": {
      "release-type": "python",
      "package-name": "cmk-discord",
      "changelog-path": "CHANGELOG.md",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "extra-files": [
        {
          "type": "toml",
          "path": "pyproject.toml",
          "jsonpath": "$.tool.poetry.version"
        },
        {
          "type": "json",
          "path": "src/info.json",
          "jsonpath": "$.version"
        },
        {
          "type": "generic",
          "path": "src/info",
          "glob": false
        }
      ]
    }
  }
}
